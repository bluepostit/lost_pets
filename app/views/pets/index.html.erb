<div>
  <span class="h1">Found Pets</span>
  <span>
    <%= link_to 'add...', new_pet_path %>
  </span>
</div>

<div class="list-panel">
  <ul class="list-group">
    <% @pets.each do |pet| %>
      <li class="list-group-item d-flex justify-content-between">
        <div>
          <%= pet.name %>
        </div>
        <div>
          <%= link_to('view', pet_path(pet)) %> |
          <%= link_to('edit', edit_pet_path(pet)) %> |
          <%= link_to('delete',
                      pet_path(pet),
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete this pet?' }
                      ) %>
        </div>
      </li>
    <% end %>

  </ul>
</div>